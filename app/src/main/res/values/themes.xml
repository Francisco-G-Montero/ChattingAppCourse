<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Texting" parent="Base.MaterialThemeBuilder">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="android:textColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="backgroundColor">@color/colorBackground</item>
        <item name="colorOnBackground">@color/primaryTextColor</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/MyAlertDialog</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>

    </style>

    <style name="CustomDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColor">@color/black_t</item>
    </style>
    <style name="Menu" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">@color/black_t</item>
    </style>

    <style name="Theme.Texting.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Texting.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Texting.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="popupMenuBackground">@color/colorBackgroundDark</item>
    </style>

    <style name="Base.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- va el "?" porque colorPrimaryVariant ya ha sido definida mÃ¡s arriba-->
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?colorPrimary</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?colorControlHighlight</item>

        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>
    </style>
</resources>